<%= form_for [@comment, reply] do |f| %>

<div class="container  font-weight-lighter">
    <div class="row   text-success ">

      <div class="col-sm-3 text-sm-center p-3 mb-2">
        <%= f.label :user %>:
        <%= f.collection_select :user_id, User.all, :id, :name, include_blank: false %>
      </div>
      <div class="  col-sm-6 text-sm text-wrap">
        <!--<div class="col-sm-6  border text-success border-success rounded-pill border"> -->
        <div class="field" style="display: none;" >
          <%= f.label :content %>
        </div>
        <div class="field" style="padding-top: 15px;" >
          <!--#-ms-flexbox;-->
          <%= f.text_field "content",  size:"40",border:"none", outline: "none", apperance:"none", placeholder: "Write a reply to this comment" %>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="field" style="display: none;" >
          <%= f.label :comment_id %>
          <%= f.text_field :comment_id %>
        </div>
        <div class="actions text-wrap" style="padding-top: 15px;">
          <%= f.submit %>
          <!--  <button type="button" class="btn btn-sm btn-light btn-outline-secondary" onclick="window.history.back();">Cancel</button> -->
        </div>
      </div>
    </div>
  </div>
<% end %>


