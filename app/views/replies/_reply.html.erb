
<div class="container text-sm-left">
   <div class="row   text-success font-weight-lighter  rounded-lg ">
     <div class="col-sm-2  text-sm-right ">
       <strong>
         <%= reply.user.name %> replied:
       </strong> <!-- reply.comment.user.name -->
     </div>
     <div class="col-sm-6 text-wrap bg-light border  border-white rounded-pill border-left-0">
       <%= reply.content %>
     </div>
     <div class="comment-admin col-sm-4">
       <!--<#%= link_to "Edit", edit_comment_reply_path(@comment, reply) %>-->
       <% @comment=Comment.find(reply.comment_id)%>
       <%= link_to "Edit", edit_comment_reply_path(@comment, reply) %>
        <%= image_tag("edit-icon.jpg",border: 0, style:'width:5%') %>
       <%= link_to "| Delete", [@comment, reply], method: :delete  %>
       <%= image_tag("delete-icon.png",border: 0, style:'width:5%') %>
     </div>
   </div>

</div>
